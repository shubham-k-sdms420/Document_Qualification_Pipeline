# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
MAX_BULK_FILES=50
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg

# Document Download Configuration (for API-based processing)
DOWNLOAD_FOLDER=downloads
DOWNLOAD_TIMEOUT=30

# Processing Configuration
PROCESSING_TIMEOUT=30
CACHE_ENABLED=True
CACHE_FOLDER=cache

# Quality Thresholds (Relaxed for real-world documents)
# Critical thresholds (immediate reject)
RESOLUTION_MIN_WIDTH=400
RESOLUTION_MIN_HEIGHT=300
OCR_CRITICAL_THRESHOLD=25
HANDWRITING_CRITICAL_THRESHOLD=30
BLUR_CRITICAL_THRESHOLD=30
BLUR_EXTREME_THRESHOLD=15
BRIGHTNESS_CRITICAL_MIN=15
BRIGHTNESS_CRITICAL_MAX=300
CONTRAST_CRITICAL_THRESHOLD=15

# Warning thresholds (partial credit)
BLUR_THRESHOLD=60
BRIGHTNESS_MIN=35
BRIGHTNESS_MAX=220
CONTRAST_THRESHOLD=22
WHITE_SPACE_MAX=80
SKEW_THRESHOLD=15
OCR_AVG_CONFIDENCE_THRESHOLD=45
OCR_HIGH_CONFIDENCE_WORDS=5
OCR_HIGH_CONFIDENCE_SCORE=70
OCR_MIN_TEXT_REGIONS=2
OCR_MIN_CHARACTERS=30
HANDWRITING_THRESHOLD=15
BRISQUE_THRESHOLD=80

# Scoring thresholds
SCORE_ACCEPT_THRESHOLD=70
SCORE_REVIEW_THRESHOLD=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Florence-2 Classifier (Optional - for false positive handwriting detection)
# Set to 'true' to enable Florence-2 override for handwriting false positives
# Requires: torch and transformers packages
FLORENCE_ENABLED=false

